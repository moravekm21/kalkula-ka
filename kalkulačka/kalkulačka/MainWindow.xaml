<Window x:Class="kalkulačka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kalkulačka"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="800">
    <Grid Margin="0,207,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Button Content="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Grid.Column="1" Content="CE" HorizontalAlignment="Center" VerticalAlignment="Center" Height="197" Width="198" FontSize="75"/>
        <Button Grid.Column="2" Content="C" HorizontalAlignment="Center" VerticalAlignment="Center" Height="197" Width="202" FontSize="75"/>
        <Button Grid.Column="3" Content="DEL" HorizontalAlignment="Center" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="198" Width="200" Grid.Row="1"/>
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="198" Width="200" Grid.Row="1"/>
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="198" Width="201" Grid.Row="1"/>
        <Button Grid.Column="3" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="198" Width="200" Grid.Row="1"/>
        <Button Content="7" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Grid.Column="1" Content="8" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Grid.Column="2" Content="9" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="197" Width="201" FontSize="75"/>
        <Button Grid.Column="3" Content="X" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Content="4" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="197" Width="202" FontSize="75"/>
        <Button Grid.Column="1" Content="5" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="197" Width="198" FontSize="75"/>
        <Button Grid.Column="2" Content="6" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Grid.Column="3" Content="-" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="197" Width="200" FontSize="75"/>
        <Button Content="1" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="197" Width="201" FontSize="75"/>
        <Button Grid.Column="1" Content="2" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="198" Width="198" FontSize="75"/>
        <Button Grid.Column="2" Content="3" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="198" Width="202" FontSize="75"/>
        <Button Grid.Column="3" Content="+" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="198" Width="200" FontSize="75"/>
        <Button Content="+/-" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="197" Width="201" FontSize="75"/>
        <Button Grid.Column="1" Content="0" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="197" Width="198" FontSize="75"/>
        <Button Grid.Column="2" Content="," Grid.Row="5" VerticalAlignment="Center" Height="197" Margin="0,0,199,0" Grid.ColumnSpan="2" FontSize="75"/>
        <Button Grid.Column="3" Content="=" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="197" Width="200" FontSize="75" Background="#FF44AFF3"/>
        <TextBlock Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="200" Margin="-1,-217,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="801"/>

    </Grid>
</Window>
